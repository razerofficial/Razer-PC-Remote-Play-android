<resources xmlns:tools="http://schemas.android.com/tools">
    <!--
    README!!!
        1. AppTheme  (root theme)
        2. BaseTheme (for app specific style items)
        3. RnTheme  (for API level specific)
        4. RnTheme.xxxxx.Base (for app (of that activity) specific style items)
        5. RnTheme.xxxxx  (for API level specific)
    -->
    <style name="BaseTheme" parent="AppTheme">
        <item name="android:windowBackground">@color/rn_razer_green</item>
        <item name="android:windowActivityTransitions">false</item>
        <!--change this false if colorPrimaryDark is dark enough  -->
        <!--Spinner Style-->
        <item name="android:navigationBarColor">@color/rn_nav_bar</item>
    </style>


    <style name="RnTheme" parent="BaseTheme" />

    <style name="RnTheme.Oobe.Base" parent="RnTheme">
        <item name="android:windowBackground">?attr/colorSurface</item>
        <item name="android:windowActivityTransitions">true</item>
    </style>

    <style name="RnTheme.Web.Base" parent="RnTheme">
        <item name="android:statusBarColor">@color/rn_status_bar</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:windowBackground">?attr/colorSurface</item>
        <item name="android:windowActivityTransitions">true</item>
    </style>

    <style name="RnTheme.Game.Base" parent="RnTheme">
        <item name="android:windowBackground">@color/rn_black</item>
        <item name="android:windowActivityTransitions">false</item>
    </style>

    <style name="RnTheme.Splash.Base" parent="RnTheme">
        <item name="android:windowBackground">@color/rn_razer_green</item>
        <item name="android:windowActivityTransitions">false</item>
    </style>

    <style name="RnTheme.Settings.Base" parent="RnTheme">
        <item name="android:statusBarColor">@color/rn_status_bar</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:windowBackground">?attr/colorSurface</item>
        <item name="android:windowActivityTransitions">true</item>
    </style>



    <style name="RnTheme.Splash" parent="RnTheme.Splash.Base" />

    <style name="RnTheme.Game" parent="RnTheme.Game.Base" />

    <style name="RnTheme.Oobe" parent="RnTheme.Oobe.Base"/>

    <style name="RnTheme.Settings" parent="RnTheme.Settings.Base"/>

    <style name="RnTheme.Web" parent="RnTheme.Web.Base"/>


</resources>